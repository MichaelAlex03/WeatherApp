<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/styles.css">
  <title>WeatherApp</title>
</head>
<body>

  <div class="container text-center">
    <form action="/search" class="search" method="get">
      <input type="text" placeholder="enter a city" class="my-2 city" name="city">
      <input type="text" placeholder="enter your statecode" class="my-2 statecode" name="statecode">
      <button>
        <img src="/images/search.png" alt="">
      </button>
    </form>

    <div class="images">
      <% if (locals.weatherId) { %>
        <%
          switch(true) {
            case weatherId >= 200 && weatherId <= 232:
              %>
              <img src="/images/rain.png" alt="">
              <%
              break;
            case weatherId >= 300 && weatherId <= 321:
              %>
              <img src="/images/drizzle.png" alt="">
              <%
              break;
            case weatherId >= 500 && weatherId <= 531:
              %>
              <img src="/images/rain.png" alt="">
              <%
              break;
            case weatherId >= 600 && weatherId <= 622:
              %>
              <img src="/images/snow.png" alt="">
              <%
              break;
            case weatherId == 800:
              %>
              <img src="/images/clear.png" alt="">
              <%
              break;
            case weatherId >= 801 && weatherId <= 804:
              %>
              <img src="/images/clouds.png" alt="">
              <%
              break;
            default:
              %>
              <img src="/images/clouds.png" alt="">
              <%
          }
          %>
      <%  } %>
      <% if (locals.temp) { %>
        <div class="format">
          <h2><%= temp %>Â°F</h2>
          <h2><%= city %>, <%= state %></h2>
        </div>
      <% } else {%>
        <h2 class="format my-4">No city currently inputed</h2>
        <%  } %>
    </div>

    <div id="time">
      <% if (locals.temp) { %>
        <%= time %>
      <%  } %>
    </div>
  </div>
  
  <%- include("partials/footer.ejs") %>
</body>
</html>





